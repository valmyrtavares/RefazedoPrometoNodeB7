<html>
    <head>
        <link rel="stylesheet" href="/assets/css/template.css"/>
    </head>
    <body>
        <header>
            <ul>
                {{#h.menu}}
                <li><a href="{{slug}}">{{name}}</a></li>
                {{/h.menu}}
            </ul>
        </header>


        {{#flashes}}
        {{#success}}
                <div>{{.}}</div>
            {{/success}}
            {{#error}}
                <div>{{.}}</div>
            {{/error}}
            {{#info}}
                <div>{{.}}</div>
            {{/info}}
        {{/flashes}}

    </body>
</html>